@model MvcLaborationWithAjax4.Models.AlbumPhotoView

@{
    var ajaxOption = new AjaxOptions
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "content"
    };
}

@using (Ajax.BeginForm("AddPhotoToAlbum", ajaxOption))
{
    foreach (var item in Model.Photos)
    {
        <div>
            <img src="/Image/@item.PhotoName" />
            <input type="checkbox" name="photos[]" value="@item.PhotoID" />
        </div>
    }
    <select name="albumID">
        @foreach (var album in Model.Albums)
        {
            <option value="@album.AlbumID">@album.AlbumName</option>
        }
    </select>
    <input type="submit" value="AddPhoto" class="btn btn-default" />
}