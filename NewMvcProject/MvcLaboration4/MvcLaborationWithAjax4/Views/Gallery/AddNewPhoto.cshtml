@model MvcLaborationWithAjax4.Models.Photo



@{
    ViewBag.Title = "AddNewPhoto";
}

<h2>UploadPicture</h2>
<div id="Spinner1" style="display:none">
    <img src="~/Image/Spinner/6.gif" />
</div>
@using (Html.BeginForm("AddNewPhoto",
                                                                        "Gallery",
                                                                        FormMethod.Post,
                                                                        new { enctype = "multipart/form-data", id = "AddNewPhoto" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        <label>
            Photo
        </label>
        <div>
            <input type="file" name="files" id="file" multiple="multiple" />
            @Html.ValidationMessage("error")
            <input type="text" name="comment" id="comment" />
        </div>
    </div>
    <div >
        <div>
            <input type="submit" value="Create" id="btnAddPhoto" />
        </div>
    </div>
    @Html.ActionLink("back to Index", "Index")
}
@section scripts{

    <script src="~/Scripts/Spinner.js"></script>
}