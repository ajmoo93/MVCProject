

@{
    ViewBag.Title = "AddNewPhoto";
}

<h2>UploadPicture</h2>
<div id="Spinner1" style="display:none">
    <img src="~/Image/Spinner/6.gif" />
</div>
@using (Html.BeginForm("AddNewPhoto",
                                                            "Gallery",
                                                            FormMethod.Post,
                                                            new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2" for="Photo">
            Photo
        </label>
        <div class="col-md-10">
            <input type="file" name="files" id="file" multiple="multiple" />
            @Html.ValidationMessage("error")
            <input type="text" name="comment" id="comment" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" id="btnAddPhoto" class="btn btn-default" />
        </div>
    </div>
    @Html.ActionLink("back to Index", "Index")
}
@section scripts{

    <script src="~/Scripts/Spinner.js"></script>
}