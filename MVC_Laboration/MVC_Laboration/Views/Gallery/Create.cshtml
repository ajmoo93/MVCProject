@model MVCProjektData.PhotoClass

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<div id="SpiningImg" style="display:none">
    <img src="~/Image/ajax-loader.gif" />
</div>

@using (Html.BeginForm( "Create", "Gallery", FormMethod.Post, new { enctype = "multipart/form-data", id="CreatrPicture"}))


{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>MyModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="form-group">
                <label class="control-label col-md-2" for="Photo">Photo</label>
                <div class="col-md-10">
                    <input type="file" name="file" id="file" />
                    @Html.ValidationMessage("error")
                </div>
            </div>

            <div class="col-md-offset-2 col-md-10">
                <input id="sub" type="submit" value="Create" class="btn btn-default" />

            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "PhotList")
</div>

<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
