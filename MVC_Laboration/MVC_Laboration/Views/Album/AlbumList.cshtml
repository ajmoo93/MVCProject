@model IEnumerable<MVCProjektData.AlbumClass>

@{
    ViewBag.Title = "AlbumList";
}

<h2>AlbumList</h2>

<p>
    @Html.ActionLink("Create New", "CreateAlbum")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AlbumName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AlbumName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AlbumId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AlbumId }) |
            @Html.ActionLink("Delete", "DeleteAlbum", new { id=item.AlbumId })
        </td>
    </tr>
}

</table>
